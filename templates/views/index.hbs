<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}
    <!--main header-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto ps-3">
                <div class="row">
                    <!-- LEFT SIDE DIV-->
                    <div class="col-md-6 col-12 main_header_left">
                         <p>Welcome to WeatherSphere</p>
                         <h2>Get the latest <span class="text_clr">Weather</span> info</h2>
                         <a href="/weather"><button>Check now</button></a>
                    </div>
                    <!-- RIGHT SIDE DIV-->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExample" class="carousel slide">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="images/sunny.png" class=" w-100" alt="..." style="height:400px;border-radius: 50%">
                              </div>
                              <div class="carousel-item">
                                <img src="images/rainy.png" class=" w-100" alt="..."style="height:400px;border-radius: 50%">
                              </div>
                              <div class="carousel-item">
                                <img src="images/cloudy.png" class="w-100" alt="..." style="height:400px;border-radius: 50%">
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer-->
    {{>footer}}
</body>
</html>